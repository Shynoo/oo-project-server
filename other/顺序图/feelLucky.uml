@startuml

skinparam sequenceParticipant underline
!include style.ptmono.iuml

actor User as u
participant Controller as a
participant BookService as b
database BookDao as d

u -> a : feelLucky()
activate a
a->b:getRandomBook()

activate b

b->d:getRandomUnborrowedBook()

activate d

d-->b:book

deactivate d

b-->a:book
deactivate b

a-->u:book
deactivate a

@enduml
